
    <body>
        <section class="section">
            <div class="container" style="display: flex; justify-content: center;">
                <% if (fetch) { %>
                    <p class="title" style="text-align: center;">Buscar Contrato</p>
                    <form action="/contrato/fetchContrato" method="POST" style="width: 50%; margin-top: 50px;">
                        <input type="hidden" name="_csrf" id="_csrf" value="<%= csrfToken %>">
                        <label for="nombre" class="label is-large">Nombre del Contrato:</label>
                        <input type="text" id="titulo" name="titulo" required class="input is-large">
                        <br>
                        <br>
                        <button type="submit" id="buscarBtn"
                            class="button is-rounded is-large is-responsive">Buscar</button>
                        <p id="mensajeValidacion" class="help is-danger"></p>
                    </form>
                    <% if (error) { %>
                        <p class="is-size-4">
                            <%= error %>
                        </p>
                        <% } %>
                            <% } %>


                                <% if (editar) { %>
                                    <p class="title" style="text-align: center;">Modificar Contrato</p>
                                    <form action="/contrato/modificarContrato" method="POST"
                                        onsubmit="return validateForm()" style="width: 50%; margin-top: 50px;">
                                        <input type="hidden" name="_csrf" id="_csrf" value="<%= csrfToken %>">
                                        <input type="hidden" name="idContrato" value="<%= contrato.IDContrato %>">
                                        <input type="hidden" name="idRazonSocial" value="<%= razonSocial.IDRazonSocial %>">
                                        <label for="Titulo" class="label is-large">Titulo:</label>
                                        <input type="text" id="titulo" name="titulo"
                                            value="<%= contrato.Titulo %>" required class="input is-large">

                                        <label for="numMeses" class="label is-large">Numero de Meses:</label>
                                        <input type="number" id="numMeses" name="numMeses"
                                            value="<%= contrato.DuracionMeses %>" step="any" required
                                            class="input is-large" pattern="^\d+(\.\d+)?$">

                                        <label for="nombreEmpresa" class="label is-large">Nombre Empresa:</label>
                                        <input type="text" id="nombreEmpresa" name="nombreEmpresa"
                                            value="<%= razonSocial.NombreEmpresa %>" required class="input is-large">

                                            <label for="razonSocial" class="label is-large">Referencia Bancaria:</label>
                                            <input type="text" id="razonSocial" name="razonSocial"
                                                value="<%= razonSocial.ReferenciaBancaria %>" required class="input is-large">
                                        <br>
                                        <button type="submit" class="button is-rounded is-large is-responsive">
                                           <span>Registrar Cambios</span>
                                           <span class="icon is-large">
                                               <i class="fa-solid fa-circle-chevron-right" style="color: #ffffff;"></i>
                                           </span>
                                        </button>
                                        <p id="alerta" class="help is-danger" style="display: none;"></p>
                                    </form>
                                    <% } %>

            </div>
        </section>
        <script type="text/javascript" src="/js/editar_diplomado.js"></script>
    </body>

    </html>