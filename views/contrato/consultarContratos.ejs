<%- include('../includes/head.ejs', { permisos: permisos, rol: rol}) %>

<body>
    <section class="section">
        <div class="columns is-flex is-justify-content-space-between">
            <div class="column is-6">
                <label class="label is-large has-text-strong has-text-weight-semibold">
                    CONTRATOS
                </label>
            </div>

            <input type="hidden" name="_csrf" id="_csrf" value="<%= csrfToken %>">

            <div class="column is-narrow is-justify-content-flex-end">
                <p class="control">
                    <a class="button is-responsive is-primary" style="font-size: large;"
                        href="/contrato/registrarContrato">
                        <span class="icon is-large">
                            <i class="fa-solid fa-circle-plus" style="color: #FFFF;"></i>
                        </span>
                        <span>
                            Agregar Contrato
                        </span>
                    </a>
                </p>
            </div>
        </div>

        <!-- Estructura / headings de tabs -->
        <div class="tabs is-boxed">
            <ul>
                <li class="is-active" id="tab_activos">
                    <a>
                        <span class="icon is-small"><i class="fa-solid fa-file-circle-check"></i></span>
                        <span> Contratos Activos</span>
                    </a>
                </li>

                <li id="tab_inactivos">
                    <a>
                        <span class="icon is-small"><i class="fa-solid fa-file-circle-xmark"></i></span>
                        <h2> Contratos Inactivos</h2>
                    </a>
                </li>
            </ul>
        </div>

        <div class="columns">
            <div class="column is-fullwidth">
                <div id="banner_estatus" class="notification is-hidden"
                    style="background-color: #DBB260; color:#ffffff;">
                    ¡Estatus del contrato modificado! Recargando la página...
                </div>
            </div>
        </div>

        <div id="contratos_activos">
            <% if (activos.length === 0) { %>
                <div class="columns">
                    <div class="column is-fullwidth">
                        <div class="notification" style="background-color: #204F7B; color:#ffffff;">
                            No hay contratos activos en este momento.
                        </div>
                    </div>
                </div>    
                    <% } else { %>
                        <% for (let activo of activos) { %>
                        <div class="columns is-flex is-align-items-stretch">
                            <div class="column" id="pagination-content">
                                <div class="box" style="text-align: left;">
                                    <div class="columns is-flex is-justify-content-space-between">
                                        <div class="column is-narrow">
                                            <p class="has-text-black has-text-weight-bold is-size-6"><%= activo.Titulo %></p>
                                        </div>
                                        <div class="column is-narrow">
                                            <p class="has-text-grey has-text-weight-medium"><b>Duración:</b> <%= activo.DuracionMeses %> meses</p>
                                        </div>
                                        <div class="column is-narrow">
                                            <p class="has-text-grey has-text-weight-medium"><b>Razón Social:</b> <%= activo.NombreEmpresa %></p>
                                        </div>
                                        <div class="column is-narrow">
                                            <p class="has-text-grey has-text-weight-medium"><b>Inflación:</b> <%= activo.PorcentajeInflacion %>%</p>
                                        </div>
                                        <div class="columns">
                                            <div class="column is-flex is-flex-direction-column is-align-items-center is-justify-content-center"> 
                                                <div class="field mb-2">
                                                    <input type="checkbox" id="estatus-<%= activo.IDContrato %>" 
                                                    class="switch is-rounded estatus-switch" checked="checked">
                                                    <label for="estatus-<%= activo.IDContrato %>"></label>
                                                </div>
                                                <form action="/contrato/detallesContrato" method="POST">
                                                    <input type="hidden" name="_csrf" id="_csrf" value="<%= csrfToken %>">
                                                    <input type="hidden" value="<%= activo.IDContrato %>" name="id" id="id">
                                                    <button class="button is-responsive is-danger" type="sumbit">
                                                        <span>
                                                            Detalles
                                                        </span>
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% } %>

                    <!-- Pagination -->
                    <nav class="pagination is-rounded" role="navigation" aria-label="pagination">
                        <a class="pagination-previous" id="prev-button">Anterior</a>
                        <a class="pagination-next" id="next-button">Siguiente</a>
                        <ul class="pagination-list" id="pagination-list">
                            <div id="pagination-numbers"></div>
                        </ul>
                    </nav>
                    <% } %>
                </div>

        <div id="contratos_inactivos" class="is-hidden">
            <% if (inactivos.length === 0) { %>
                <div class="columns">
                    <div class="column is-fullwidth">
                        <div class="notification" style="background-color: #204F7B; color:#ffffff;">
                            No hay contratos inactivos en este momento.
                        </div>
                    </div>
                </div>  
                    
                    <% } else { %>
                        <% for (let inactivo of inactivos) { %>
                        <div class="columns is-flex is-align-items-stretch">
                            <div class="column" id="pagination-content-2">
                                <div class="box" style="text-align: left;">
                                    <div class="columns is-flex is-justify-content-space-between">
                                        <div class="column is-narrow">
                                            <p class="has-text-black has-text-weight-bold is-size-6"><%= inactivo.Titulo %></p>
                                        </div>
                                        <div class="column is-narrow">
                                            <p class="has-text-grey has-text-weight-medium"><b>Duración:</b> <%= inactivo.DuracionMeses %> meses</p>
                                        </div>
                                        <div class="column is-narrow">
                                            <p class="has-text-grey has-text-weight-medium"><b>Razón Social:</b> <%= inactivo.NombreEmpresa %></p>
                                        </div>
                                        <div class="column is-narrow">
                                            <p class="has-text-grey has-text-weight-medium"><b>Inflación:</b> <%= inactivo.PorcentajeInflacion %>%</p>
                                        </div>
                                        <div class="columns">
                                            <div class="column is-narrow is-flex is-flex-direction-column is-align-items-center is-justify-content-center"> 
                                                <div class="field mb-2">
                                                    <input type="checkbox" id="estatus-<%= inactivo.IDContrato %>" 
                                                    class="switch is-rounded estatus-switch">
                                                    <label for="estatus-<%= inactivo.IDContrato %>"></label>
                                                </div>
                                                <form action="/contrato/detallesContrato" method="POST">
                                                    <input type="hidden" name="_csrf" id="_csrf" value="<%= csrfToken %>">
                                                    <input type="hidden" value="<%= inactivo.IDContrato %>" name="id" id="id">
                                                    <button class="button is-responsive is-danger" type="sumbit">
                                                        <span>
                                                            Detalles
                                                        </span>
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% } %>

                    <!-- Pagination -->
                    <nav class="pagination is-rounded" role="navigation" aria-label="pagination">
                        <a class="pagination-previous" id="prev-button-2">Anterior</a>
                        <a class="pagination-next" id="next-button-2">Siguiente</a>
                        <ul class="pagination-list" id="pagination-list-2">
                            <div id="pagination-numbers-2"></div>
                        </ul>
                    </nav>
                    <% } %>
                </div>        
        </div>
    </section>
</body>

<script type="text/javascript" src="/js/contrato/consultarContratos.js"></script>
<script type="text/javascript" src="/js/contrato/desactivarContrato.js"></script>
<script type="text/javascript" src="/js/pagination.js"></script>
<script type="text/javascript" src="/js/pagination2.js"></script>

<%- include('../includes/foot.ejs') %>